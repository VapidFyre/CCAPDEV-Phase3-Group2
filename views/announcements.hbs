
{{> header}}

    {{!-- Replace this part with data from the server (sample data for each announcement) --}}
    {{#each announcement}}
    <div class="post-grid">
        <div class="post-announcement">
            <div class="poster-info">
                <div><img class="user-profile" src="profile-assets/dlsulogo.jpeg"></div>
                <div>
                    <p class="post-name"><i>from Helpdesk Announcement</i></p>
                    <p class="post-date">{{this.date}}</p>
                </div>
            </div>
            <div class="post-content-title">
                <p><strong>[{{this.title}}]</strong></p>
            </div>
            <div class="post-content-announcement">
                <p>{{this.content}}</p>
            </div>
            <div class="post-stats">
                <div class="post-heart">&#9829;</div>
                <div><strong>{{this.likesCount}}</strong> Likes</div>
                <div><strong>{{this.commentsCount}}</strong> Comments</div>
            </div>
        </div>
    </div>
    {{/each}}

    <div class="fixed-grid">
        <button id="userprofile" class="fg-button"><img class="fg-image" src="site-assets/you.jpg"></button>
    </div>
    <link rel="stylesheet" href="styles/announcement.css">

    
